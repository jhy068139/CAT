<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topMenu"
        android:background="#1EC0FF"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/logo2"
            android:layout_width="60dp"
            android:layout_height="60dp">
        </ImageView>
        <ImageView
            android:id="@+id/itemMenu"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/menu2"
            android:layout_width="40dp"
            android:layout_height="40dp">
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <CalendarView
        android:selectedWeekBackgroundColor="#1EC0FF"
        android:layout_marginTop="10dp"
        android:id="@+id/calMenu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </CalendarView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#1EC0FF"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:id="@+id/txt"
            android:textSize="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="this week's alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#FFFFFF"
                android:id="@+id/timer"
                android:textSize="50dp"
                android:text="00:00"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <SlidingDrawer
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:content="@id/listView"
        android:handle="@id/handle"
        android:topOffset="0dp"
        tools:layout_editor_absoluteX="-51dp"
        tools:layout_editor_absoluteY="-16dp">

        <ImageView
            android:id="@+id/handle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/handle"></ImageView>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"></ListView>

    </SlidingDrawer>


</androidx.constraintlayout.widget.ConstraintLayout>