<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topMenu"
        android:background="#1EC0FF"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/logo2"
            android:layout_width="60dp"
            android:layout_height="60dp">
        </ImageView>
        <ImageView
            android:id="@+id/itemMenu"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/menu2"
            android:layout_width="40dp"
            android:layout_height="40dp">
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <CalendarView
        android:selectedWeekBackgroundColor="#1EC0FF"
        android:layout_marginTop="10dp"
        android:id="@+id/calMenu"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </CalendarView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setView"
        app:layout_constraintTop_toBottomOf="@+id/calMenu"
        android:layout_marginRight="50dp"

        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/selname"
            android:text="선택한 날 일정"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/sel"
            android:text="선택한 날 일정 시간"
            app:layout_constraintTop_toBottomOf="@+id/selname"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/tag"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="태그"
            app:layout_constraintTop_toBottomOf="@+id/sel"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/sky2"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <TextView
            android:background="#66000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </TextView>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:id="@+id/txt"
            app:layout_constraintTop_toTopOf="parent"
            android:text="오늘의 자외선 알람 시간"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/txt"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#FFFFFF"
                app:layout_constraintRight_toLeftOf="@+id/timer"
                android:text="오후/오전"
                android:textSize="20dp"
                android:id="@+id/timeSet"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:textColor="#FFFFFF"
                android:id="@+id/timer"
                android:textSize="50dp"
                android:text="00:00"
                app:layout_constraintLeft_toRightOf="@+id/timeSet"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>